<div class"row">
  <div class="span4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well"}) do |f| %>
      <%= devise_error_messages! %>


      <fieldset> 
        <legend> <h2>Sign up</h2></legend>
          <div><%= f.input :first_name %></div>
            

          <div><%= f.input :last_name %></div>

           <div><%= f.input :profile_name %></div>

          <div><%= f.input :email, autofocus: true %></div>

          <div>
             <%= f.input :password, autocomplete: "off", placeholder: "8 character minimum" %>
            <% if @validatable %><% end %>
            
          </div>

          <div>
            <%= f.input :password_confirmation, autocomplete: "off" %></div>

          <div>
            <%= f.button :submit, "Sign up" %></div>
      </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
